  <div class="navbar navbar-expand-sm navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= cl_image_tag "logo-main", id: "logo" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to games_path, class: "nav-link" do %>
            <i class="fas fa-search"></i> Browse Games
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_listing_path, class: "nav-link" do %>
            <i class="fas fa-plus"></i> List a Game
            <% end %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.filename %>
            <%= cl_image_tag current_user.photo.url(:dashboard_avatar), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://res.cloudinary.com/dedqosv7x/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,b_rgb:262c35/v1573196467/drnvl6hpigqsuxy8iqhn.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Swaps", user_path(current_user), class: "dropdown-item nav-link"  %>
            <%= link_to "My Listed Games", user_listings_path(current_user), class: "dropdown-item nav-link"  %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item nav-link"  %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item nav-link" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Make an Account", new_user_registration_path, class: "nav-link" %>
        </li>
        <li>
          <%= link_to "Sign In", new_user_session_path, class: " button-blue "  %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
