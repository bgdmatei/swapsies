<div class="container">
<h1 class="text-center">Find Games</h1>
  <div class="search-form-control form-group">
    <%= form_tag games_path, method: :get, class: "search-form" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Enter the name of a game"
      %>
      <%= submit_tag "Search", class: "btn btn-warning", id:"search" %>
  </div>
  <% end %>
  <div class="row">
    <% @games.each do |game| %>
      <div class="card col-lg-3 col-md-6 col-sm-9 col-xs-12">
        <div class="card-body">
            <p><%=link_to game.title, game_path(game) %></p>
            <p><%=game.description %></p>
            <p><%=game.console %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>