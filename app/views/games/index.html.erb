<div class="container">
<h1 class="text-center">Find Games!</h1>

<!--Search-->
  <div class="search-form-control form-group">
    <%= form_tag games_path, method: :get, class: "search-form d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Enter the name of a game"
      %>
      <%= submit_tag "Search", class: "btn btn-outline btn-blue", id:"search" %>
    <% end %>
  </div>

  <div class="row justify-content-around">
    <% @games.each do |game| %>
      <div class="card-product">
        <%= link_to "", game_path(game), class:"listing-card-link" %>
        <%= image_tag game.cover_image, alt: "alttext", class:"card-cover-image"%>
        <div class="card-product-infos">
          <h5 class="game-title"><%= game.title %></h5>
          <% if game.rating.between?(80,100) %>
          <% 5.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
        <% elsif game.rating.between?(60,80)%>
          <% 4.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <i class="fas fa-star"></i>
        <% elsif game.rating.between?(40,60)%>
          <% 3.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <% 2.times do %>
            <i class="fas fa-star"></i>
          <% end %>
        <% end %>
<!--rating algo ends-->
          <p class="console-type"><%=game.console %> ãƒ» <%= game.release_date %></p>
          <p class="game-description"><%=game.description.split(",").first(2).join(", ") %></p>

  <div>
  <%= simple_form_for :search, url: games_path, method: :get, class: "form-inline" do |f| %>
    <%= f.input :query, required: false, input_html: {value: ""}%>
    <%= f.submit "Search", class: "button-blue"%>
    <% end %>
  </div>
  <div class="row justify-content-around">
    <% @games.each do |game| %>
        <div class="card-game col-lg-3 col-md-6 col-sm-9 col-xs-12">
          <%= link_to "", game_path(game), class:"listing-card-link" %>
          <div class="justify-content-center">
          <% cover_image_url = game.cover_image != 'http:' ? game.cover_image : "controller.png" %>
          <%= image_tag cover_image_url, alt: "alttext", class:"card-cover-image pt-3"%>
          </div>
          <div class="d-flex pt-3 justify-content-between">
            <h5><%= game.title %></h5>
            <p><%=game.console %></p>
          </div>
          <p><%=game.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
