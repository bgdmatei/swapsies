<div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
  <div class="carousel-inner ">
      <h1 class="carousel-caption carousel-btn"><%= link_to "Browse games" , games_path , class: "btn-red"%></h1>
    <div class="carousel-item active">
      <%= image_tag 'pokemon.png', alt: "alttext", class: "d-block w-100"  %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'reddead.png', alt: "alttext", class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'zelda.png', alt: "alttext", class: "d-block w-100" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container-landing d-flex justify-content-center mt-3">
  <div class="row">
    <div class="card-landing ">
      <p><i class="fas fa-sync"></i></p>
      <h4> Swap your favourite games anywhere, anytime!</h4>
    </div>
    <div class="card-landing ">
      <p><i class="fas fa-gamepad"></i></p>
      <h4>Choose from the latest releases to old-school classics</h4>
    </div>
    <div class="card-landing">
      <p><i class="fas fa-search"></i></p>
      <h4>Find the game that fits your taste</h4>
    </div>
  </div>
</div>
