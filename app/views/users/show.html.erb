<div class="container">
  <div class="user-pane d-flex col-12 justify-content-between">
    <div class="row card-dashboard">
      <div class="dashboard">
        <% if current_user.photo.filename %>
          <%= cl_image_tag current_user.photo.url(:user_photo_main), class:"dashboard-image"%>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/dedqosv7x/image/upload/w_200,ar_1:1,c_fill,g_auto/v1573196467/drnvl6hpigqsuxy8iqhn.jpg", class:"dashboard-image" %>
        <% end %>
        <div class="user-details">
          <h2><%= current_user.username %></h2>
          <hr>
          <p><%=  current_user.first_name %> <%=  current_user.last_name %> </p>
          <p><%=  current_user.city.capitalize! %> </p>
        </div>
      </div>
    </div>
    <div class="col-9 card-swaps">
      <div>
        <h1 class="text-center">Current swapsies</h1>
      </div>
        <div class="d-flex justify-content-between">
            <div class="column justify-content-between">
              <h3>Swap Requests</h3>
              <ul class="request-card">
                <% current_user.listings.each do |listing| %>
                  <% listing.requested_swaps.each do |swap| %>
                  <li>
                  <div class="card p-2">
                    <p class="m-0">
                     <span class="your">Your </span> <%= swap.listing_offered.game.title %> for <span class="their"><%= swap.listing_requested.user.username %>'s </span><%= swap.listing_requested.game.title %>
                    </p>
                    </div></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
            <div class="column">
              <h3>Swap Offers</h3>
              <ul class="request-card">
                  <% current_user.listings.each do |listing| %>
                  <% listing.offered_swaps.each do |swap| %>
                  <li>
                    <div class="card p-2">
                      <p class="m-0"> <span class="your">Your </span> <%= swap.listing_offered.game.title %> for <span class="their"><%= swap.listing_requested.user.username %>'s </span><%= swap.listing_requested.game.title %>-
                      </p>
                    </div>
                  </li>
                  <% end %>
                <% end %>
              </ul>
            </div>
        </div>
      </div>
  </div>
</div>
