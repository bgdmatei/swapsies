<div class="container">


  <div class="plain-field">
    <h1>Swap Games!</h1>
    <br>
      <div class="d-flex align-items-start justify-contents-top">
        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12" >
          <div class="p-4 mb-3 card swap-card">
            <p><%= image_tag @listing.game.cover_image, alt: "alttext", class:"card-cover-image pt-3"%></p>
            <h5><%= @listing.game.title %></h5>
            <p><%= @listing.game.description %></p>
            <p><%= @listing.game.console %></p>
          </div>
        </div>

        <div class="p-4 mb-3 mr-3 col-lg-9 col-md-6 col-sm-12 col-xs-12">
          <h3>Make an offer</h3>
          <%= simple_form_for [@listing, @swap] do |f| %>
            <%= f.association :listing_offered, collection: current_user.listings %>
            <%= f.submit "Make Swap Offer", class: "button-blue"%>
          <% end %>
        </div>
      </div>
  </div>
</div>
