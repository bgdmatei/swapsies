<div class="container">
  <h1>Swap Games!</h1>
  <br>
  <h3>You are requesting...</h3>

  <div class="card p-4 mb-3 col-lg-3 col-md-6 col-sm-9 col-xs-12">
    <h5><%= @listing.game.title %></h5>
    <p><%= @listing.game.description %></p>
    <p><%= @listing.game.console %></p>
  </div>

  <h3>Make an offer</h3>
  <%= simple_form_for [@listing, @swap] do |f| %>
    <%= f.association :listing_offered, collection: current_user.listings %>
    <%= f.submit "Make Swap Offer", class: "btn btn-primary"%>
  <% end %>
</div>
